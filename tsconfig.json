{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@61-game/shared/*": ["packages/shared/src/*"],
      "@61-game/engine/*": ["packages/engine/src/*"],
      "@61-game/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": ["packages/**/*", "apps/**/*", "tests/**/*", "vitest.config.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}