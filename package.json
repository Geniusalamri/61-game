{
  "name": "61-game",
  "private": true,
  "packageManager": "pnpm@8",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests/e2e"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "build": "pnpm --filter @61-game/web build",
    "sim": "pnpm --filter @61-game/shared run build && pnpm --filter @61-game/engine run build && node packages/engine/dist/sim.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.5"
  }
}